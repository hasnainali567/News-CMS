<% news.forEach(news=> { %>

    <div class="post-content">
        <div class="row">
            <div class="col-md-4">
                <a class="post-img" href="/single/<%= news._id %>"><img src="/uploads/<%= news.image %>"
                        alt="Banner" /></a>
            </div>
            <div class="col-md-8">
                <div class="inner-content clearfix">
                    <h3><a href='/single/<%= news._id %>'>
                            <%= news.title %>
                        </a></h3>
                    <div class="post-information">
                        <span>
                            <i class="fa fa-tags" aria-hidden="true"></i>
                            <a href='/categories/<%= news.category.slug %>'>
                                <%= news.category.name %>
                            </a>
                        </span>
                        <span>
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <a href='/authors/<%= news.author._id %>'>
                                <%= news.author.fullName %>
                            </a>
                        </span>
                        <span>
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <%= news.createdAt.toDateString() %>
                        </span>
                    </div>
                    <p class="description">
                        <%= news.content %>
                    </p>
                    <a class='read-more pull-right' href='/single/<%= news._id %>'>read more</a>
                </div>
            </div>
        </div>
    </div>
    <% }); %>


        <nav>
            <ul class="pagination">
                <% if (pagination.page> 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="/?page=<%= pagination.page - 1 %>">Previous</a>
                    </li>
                    <% } else { %>
                        <li class="page-item">
                            <a class="page-link disabled" href="/?page=<%= pagination.page - 1 %>">Previous</a>
                        </li>
                        <% } %>

                            <% for (let i=1; i <=pagination.totalPages; i++) { %>
                                <li class="page-item <%= (i === pagination.page) ? 'active' : '' %>">
                                    <a class="page-link" href="/?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>

                                    <% if (pagination.page < pagination.totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/?page=<%= pagination.page + 1 %>">Next</a>
                                        </li>
                                        <% } else { %>
                                            <li class="page-item disabled">
                                                <span class="page-link disabled">Next</span>
                                            </li>
                                            <% } %>
            </ul>
        </nav>